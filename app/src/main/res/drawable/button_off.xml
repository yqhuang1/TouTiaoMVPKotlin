<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/c_4CD964" />
            <corners android:radius="20dp" />
            <size android:width="60dp" android:height="8dp" android:dashWidth="0dp" android:dashGap="0dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/c_FFFFFF" />
            <corners android:radius="20dp" />
            <size android:width="60dp" android:height="10dp" />
            <stroke android:width="1dp" android:color="@color/c_DDDDDD" android:dashWidth="0dp" android:dashGap="0dp" />
        </shape>
    </item>
</selector>
